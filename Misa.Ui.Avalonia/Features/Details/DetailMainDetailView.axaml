<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="Misa.Ui.Avalonia.Features.Details.DetailMainDetailView"
             xmlns:details="clr-namespace:Misa.Ui.Avalonia.Features.Details"
             x:DataType="details:DetailMainDetailViewModel">

    <Border>
        <TabControl SelectedIndex="{Binding SelectedTabIndex}">
                <TabItem Header="Information">
                    <details:DetailInformationView 
                        DataContext="{Binding InformationViewModel}"/>
                </TabItem>

                <TabItem Header="Relations">
                    <details:DetailRelationView />
                </TabItem>

                <TabItem Header="Sessions">
                    <details:DetailSessionView />
                </TabItem>

                <TabItem Header="History">
                    <details:DetailHistoryView />
                </TabItem>
            </TabControl>
    </Border>
</UserControl>