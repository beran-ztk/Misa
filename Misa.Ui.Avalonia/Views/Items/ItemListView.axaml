<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Misa.Ui.Avalonia.Views.Items.ItemListView"
             xmlns:vm="clr-namespace:Misa.Ui.Avalonia.ViewModels.Items"
             x:DataType="vm:ItemListViewModel">

    <Border Padding="16">
        <DockPanel>

            <!-- Header -->
            <StackPanel DockPanel.Dock="Top">
                <StackPanel Orientation="Horizontal">

                    <TextBlock Text="Entities:"
                               Margin="0 0 6 0"
                               Foreground="{StaticResource BrushTextPrimary}" />
                    <TextBlock Text="{Binding Entities.Count}"
                               Foreground="{StaticResource BrushTextPrimary}" />
                </StackPanel>
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Selected:"
                               Margin="0 0 6 0"
                               Foreground="{StaticResource BrushTextPrimary}" />

                    <TextBlock Text="{Binding MainViewModel.SelectedEntity.Id}"
                               Foreground="{StaticResource BrushTextPrimary}" />
                </StackPanel>
            </StackPanel>
            

            <DataGrid ItemsSource="{Binding Entities}"
                      SelectedItem="{Binding MainViewModel.SelectedEntity, Mode=TwoWay}"
                       AutoGenerateColumns="False"
                       CanUserSortColumns="True"
                       CanUserReorderColumns="True"
                       CanUserResizeColumns="True"
                       GridLinesVisibility="All"
                       HeadersVisibility="All">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id"
                                                 Binding="{Binding Id}"
                                                 Width="*" />

                    <DataGridTextColumn Header="Owner"
                                                 Binding="{Binding OwnerId}"
                                                 Width="*" />

                    <DataGridTextColumn Header="Workflow"
                                                 Binding="{Binding WorkflowId}"
                                                 Width="100" />

                    <DataGridTextColumn Header="Created"
                                                 Binding="{Binding CreatedAt, StringFormat='yyyy-MM-dd HH:mm'}"
                                                 Width="200" />

                </DataGrid.Columns>

            </DataGrid>
        </DockPanel>
    </Border>

</UserControl>
