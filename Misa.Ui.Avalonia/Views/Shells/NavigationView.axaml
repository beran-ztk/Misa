<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Misa.Ui.Avalonia.Views.Shells.NavigationView"
             xmlns:vm="clr-namespace:Misa.Ui.Avalonia.ViewModels.Shells"
             x:DataType="vm:NavigationViewModel">
    
    <UserControl.Resources>
        <Style x:Key="NavButtonStyle" Selector="Button.nav">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Template">
            </Setter>

            <Style Selector="Button.nav:pointerover">
                <Setter Property="Background" Value="#20FFFFFF" />
            </Style>
            <Style Selector="Button.nav:pressed">
                <Setter Property="Background" Value="#40FFFFFF" />
            </Style>
        </Style>

    </UserControl.Resources>
    
    
    <Border Background="{StaticResource BrushPrimaryBackground}"
            BorderBrush="{StaticResource BrushSecondaryBackground}"
            BorderThickness="0,0,1,0">
        <Grid RowDefinitions="*,Auto">
        
            <StackPanel Grid.Row="0" 
                        Spacing="{StaticResource SpacingMedium}">
                
                <TextBlock Text="Navigation" 
                           FontSize="10"
                           Margin="2,2,0,0"
                           Foreground="{StaticResource BrushTextFaded}"/>
                
                <Button Classes="nav" 
                        Background="Transparent"
                        HorizontalAlignment="Stretch"
                        Command="{Binding ShowItemsCommand}">
                    <StackPanel Orientation="Horizontal" 
                                Spacing="{StaticResource SpacingSmall}">
                        <Image Width="16" Height="16"
                               Source="{SvgImage /Assets/Images/MainNavigation/chart-bar.svg}"/>
                        <TextBlock Text="Items" 
                                   FontSize="{StaticResource FontSizeMedium}"
                                   Foreground="{StaticResource BrushTextSecondary}"/>
                    </StackPanel>
                </Button>
                
                <Button Classes="nav" 
                        Background="Transparent"
                        HorizontalAlignment="Stretch"
                        Command="{Binding ShowItemsCommand}">
                    <StackPanel Orientation="Horizontal" 
                                Spacing="{StaticResource SpacingSmall}">
                        <Image Width="16" Height="16"
                               Source="{SvgImage /Assets/Images/MainNavigation/calendar-dots.svg}"/>
                        <TextBlock Text="Calendar" 
                                   FontSize="{StaticResource FontSizeMedium}"
                                   Foreground="{StaticResource BrushTextSecondary}"/>
                    </StackPanel>
                </Button>
                
            </StackPanel>

            <!-- Settings unten -->
            <Button Grid.Row="1" 
                    Classes="nav" 
                    Background="Transparent"
                    HorizontalAlignment="Stretch"
                    Command="{Binding ShowItemsCommand}">
                <StackPanel Orientation="Horizontal"
                            Spacing="{StaticResource SpacingSmall}">
                    <Image Width="16" Height="16"
                           Source="{SvgImage /Assets/Images/MainNavigation/faders-horizontal.svg}"/>
                    <TextBlock Text="Settings" 
                               FontSize="{StaticResource FontSizeMedium}"
                               Foreground="{StaticResource BrushTextSecondary}"/>
                </StackPanel>
            </Button>
        </Grid>
    </Border>
    
</UserControl>
